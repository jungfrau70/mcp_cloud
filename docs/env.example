# Copy this file to backend/env/.env and fill in real values

# --- PostgreSQL ---
POSTGRES_DB=mcp_db
POSTGRES_USER=mcpuser
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://mcpuser:changeme@mcp_postgres:5432/mcp_db

# --- Neo4j ---
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme
NEO4J_AUTH=neo4j/changeme

# --- Redis ---
REDIS_URL=redis://mcp_redis:6379

# --- Embeddings (optional) ---
EMBEDDING_BACKEND=local
EMBEDDING_MODEL=jhgan/ko-sroberta-multitask
HF_HUB_OFFLINE=1
HF_LOCAL_FILES_ONLY=1

# --- Cloud credentials (optional; prefer external secret stores in prod) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-northeast-2

AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_DEFAULT_LOCATION=koreacentral

# --- LLM / App keys ---
GEMINI_API_KEY=
MCP_API_KEY=
